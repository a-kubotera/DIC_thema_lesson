<%if notice.present? %>
  <div class="alert alert-success">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<h2>ブログ一覧</h2>
<article>
  <% @blogs.each do |blog| %>
    <div class="row blogs__index">
      <div class="col-xs-3 ">投稿者名</div>
      <div class="col-xs-9 blogs--left"><%= blog.user.name %></div>
      <div class="col-xs-3">タイトル</div>
      <div class="col-xs-9 blogs--left"><%= blog.title %></div>
      <div class="col-xs-3">内容</div>
      <div class="col-xs-9 blogs--left"><%= blog.content %></div>
    </div>
    <p> 
      <%= link_to '詳細', blog ,class: "btn btn-primary"%>
      <%= link_to '修正', edit_blog_path(blog),class: "btn btn-warning" %>
      <%= link_to '削除', blog, method: :delete,class:"btn btn-danger", data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
  <P><%= link_to '新規登録', new_blog_path ,class: "btn btn-success"%></p>
</article>
